<Window x:Class="Restaurant.AddIng"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddIng" Height="450" Width="800">

    <Grid>
        
            <TextBox x:Name="nameIng" HorizontalAlignment="Left" Height="23" Margin="185,182,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="132"/>
            <TextBox x:Name="qtyIng" HorizontalAlignment="Left" Height="23" Margin="530,182,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <Button x:Name="ADDING" Content="Add Ingredient" HorizontalAlignment="Left" Margin="372,262,0,0" VerticalAlignment="Top" Width="94" Click="ADDING_Click" Height="26"/>
            <TextBlock x:Name="IngName" HorizontalAlignment="Left" Margin="230,154,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top"/>
            <TextBlock x:Name="IngQty" HorizontalAlignment="Left" Margin="566,154,0,0" TextWrapping="Wrap" Text="Quantity" VerticalAlignment="Top"/>

        
    </Grid>
</Window>
